<%- include('partials/header.ejs') %>

  <body class="bg-zinc-950 font-sans antialiased text-zinc-200 overflow-hidden ">

    <% if(error && error.length> 0) { %>
      <div id="flash-message"
        class="fixed top-6 left-1/2 -translate-x-1/2 bg-red-500/90 backdrop-blur-md text-white font-semibold px-8 py-3 rounded-full shadow-2xl z-50 border border-red-400/50 transition-all duration-500">
        <%= error %>
      </div>
      <% } %>

        <main class="h-screen w-full flex flex-col md:flex-row items-stretch overflow-hidden ">

          <section
            class="border-red-500 border w-full md:w-1/2 h-1/2 md:h-full bg-zinc-900 flex flex-col justify-center px-8 md:px-16 lg:px-24 border-b md:border-b-0 md:border-r border-zinc-800 relative">
            <div
              class="absolute -bottom-20 -left-20 w-64 h-64 bg-indigo-600/5 blur-[100px] rounded-full pointer-events-none">
            </div>

            <div class="max-w-md mx-auto w-full relative z-10">
              <header class="mb-8">
                <span class="text-indigo-500 font-bold tracking-[0.2em] uppercase text-[10px]">Step Into Luxury</span>
                <h2 class="text-3xl md:text-4xl font-black text-white mt-1 tracking-tighter">Create Account</h2>
                <p class="text-zinc-500 text-sm mt-2">Join our exclusive community of collectors.</p>
              </header>

              <form action="/user/register" method="post" class="space-y-4 md:space-y-5">
                <div class="group">
                  <label
                    class="block text-[10px] font-bold uppercase tracking-widest text-zinc-500 mb-1.5 group-focus-within:text-indigo-400 transition-colors">Full
                    Name</label>
                  <input type="text" name="fullname" placeholder="John Doe"
                    class="w-full px-4 py-3 rounded-xl bg-zinc-800/30 border border-zinc-700/50 text-white focus:border-indigo-500/50 focus:ring-4 focus:ring-indigo-500/10 outline-none transition-all placeholder:text-zinc-600 shadow-inner"
                    required>
                </div>
                <div class="group">
                  <label
                    class="block text-[10px] font-bold uppercase tracking-widest text-zinc-500 mb-1.5 group-focus-within:text-indigo-400 transition-colors">Email
                    Address</label>
                  <input type="email" name="email" placeholder="john@example.com"
                    class="w-full px-4 py-3 rounded-xl bg-zinc-800/30 border border-zinc-700/50 text-white focus:border-indigo-500/50 focus:ring-4 focus:ring-indigo-500/10 outline-none transition-all placeholder:text-zinc-600 shadow-inner"
                    required>
                </div>
                <div class="group">
                  <label
                    class="block text-[10px] font-bold uppercase tracking-widest text-zinc-500 mb-1.5 group-focus-within:text-indigo-400 transition-colors">Password</label>
                  <input type="password" name="password" placeholder="••••••••"
                    class="w-full px-4 py-3 rounded-xl bg-zinc-800/30 border border-zinc-700/50 text-white focus:border-indigo-500/50 focus:ring-4 focus:ring-indigo-500/10 outline-none transition-all placeholder:text-zinc-600 shadow-inner"
                    required>
                </div>
                <button type="submit"
                  class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3.5 rounded-xl transition-all shadow-lg shadow-indigo-600/20 active:scale-[0.97] mt-2">
                  Begin Journey
                </button>
              </form>
            </div>
          </section>

          <section
            class="w-full md:w-1/2 h-1/2 md:h-full bg-zinc-950 flex flex-col justify-center px-8 md:px-16 lg:px-24 relative">
            <div
              class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-emerald-500/5 blur-[120px] rounded-full pointer-events-none">
            </div>

            <div class="max-w-md mx-auto w-full relative z-10">
              <header class="mb-8 text-right md:text-left">
                <span class="text-emerald-500 font-bold tracking-[0.2em] uppercase text-[10px]">Private Access</span>
                <h2 class="text-3xl md:text-4xl font-black text-white mt-1 tracking-tighter">Welcome Back</h2>
                <p class="text-zinc-500 text-sm mt-2">Resume your curated watch experience.</p>
              </header>

              <form action="/user/login" method="post" class="space-y-4 md:space-y-5">
                <div class="group">
                  <label
                    class="block text-[10px] font-bold uppercase tracking-widest text-zinc-500 mb-1.5 text-right md:text-left group-focus-within:text-emerald-400 transition-colors">Email
                    Address</label>
                  <input type="email" name="email" placeholder="john@example.com"
                    class="w-full px-4 py-3 rounded-xl bg-zinc-900/50 border border-zinc-800 text-white focus:border-emerald-500/50 focus:ring-4 focus:ring-emerald-500/10 outline-none transition-all placeholder:text-zinc-700"
                    required>
                </div>
                <div class="group">
                  <label
                    class="block text-[10px] font-bold uppercase tracking-widest text-zinc-500 mb-1.5 text-right md:text-left group-focus-within:text-emerald-400 transition-colors">Password</label>
                  <input type="password" name="password" placeholder="••••••••"
                    class="w-full px-4 py-3 rounded-xl bg-zinc-900/50 border border-zinc-800 text-white focus:border-emerald-500/50 focus:ring-4 focus:ring-emerald-500/10 outline-none transition-all placeholder:text-zinc-700"
                    required>
                </div>
                <button type="submit"
                  class="w-full bg-white hover:bg-zinc-200 text-zinc-950 font-bold py-3.5 rounded-xl transition-all shadow-xl active:scale-[0.97] mt-2">
                  Sign In
                </button>
              </form>

              <div class="mt-6 text-center md:text-left">
                <a href="#"
                  class="text-[11px] text-zinc-600 hover:text-zinc-400 transition tracking-wide underline underline-offset-4">Forgot
                  password?</a>
              </div>
            </div>
          </section>

        </main>

        <script>
          const flashMessage = document.getElementById('flash-message');
          if (flashMessage) {
            setTimeout(() => {
              flashMessage.style.opacity = '0';
              flashMessage.style.transform = 'translate(-50%, -20px)';
              setTimeout(() => flashMessage.remove(), 500);
            }, 3000);
          }
        </script>
  </body>

  </html>